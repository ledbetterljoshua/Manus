<!DOCTYPE html>
<html>
<head>
  <title>Odot</title>
  <meta name="viewport" content="wodth=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "vendor/modernizr" %>

  <%= csrf_meta_tags %>
</head>
<body>


<% flash.each do |type, message| %>
	<div class="flash alert-box text-center <%= type %>">
		<%= message %>
		<a href="#" class="close">&times;</a>
	</div>
<% end %>

<header class="row global_header">
	<div class="small-12 small-centered medium-8 
	medium-centered large-5 large-centered columns">
	<% if logged_in? %>
		<%= link_to "Todo Lists", todo_lists_path %>
    	<%= link_to "Log Out", logout_path, method: :delete %>
    <% else %>
    	<%= link_to "Log In", new_user_session_path %>
   		<%= link_to "Sign Up", new_user_path %>
    <% end %>
    </div> 
</header>

<div class="row collapse">
	<div class="small-12 small-centered medium-8 
	medium-centered large-5 large-centered columns">
<%= yield %>
	</div>
</div>


<footer class="row">
	<div class="small-12 small-centered medium-8 
		medium-centered large-5 large-centered columns text-centered">
		<% if logged_in? %>
			<%= link_to "Settings", edit_user_path(current_user) %>
		<% end %>
	</div>
</footer>




<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
</body>
</html>





<%= title "Sign Up for Odot" %>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  	<legend>About You</legend>
    <%= f.label :first_name, "First Name", autofocus: 'autofocus' %>
    <%= f.text_field :first_name %>
  
    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name %>
 
    <%= f.label :email %>
    <%= f.text_field :email %>

  </fieldset>

  <fieldset>
  	<legend>Create a Password</legend>
	    <%= f.label :password  %><br>
	    <%= f.password_field :password %>
	
	    <%= f.label :password_confirmation, "Retype Your Password" %>
	    <%= f.password_field :password_confirmation %>
  </fieldset>
  <div class="row">
  	<div class="small-12 columns">
    <%= f.submit "Submit", class: "button radius expand" %>
	</div>
  </div>
  <div class="row">
  <%= link_to "Sign In", new_user_session_path, class: "small-6 columns text-left" %>
</div>
<% end %>
